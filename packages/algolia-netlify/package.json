{
  "name": "@tryghost/algolia-netlify",
  "version": "0.0.2",
  "repository": "https://github.com/TryGhost/algolia/tree/master/packages/algolia-netlify",
  "author": "Ghost Foundation",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "dev": "yarn serve",
    "test": "NODE_ENV=testing mocha './test/**/*.test.js'",
    "lint": "eslint . --ext .js --cache",
    "posttest": "yarn lint",
    "serve": "netlify-lambda serve --config ./webpack.functions.js functions ",
    "build": "mkdir -p build/site && netlify-lambda build functions"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:ghost/browser"
    ],
    "plugins": [
      "ghost"
    ]
  },
  "eslintIgnore": [
    "webpack.functions.js",
    "build/*"
  ],
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-plugin-ghost": "1.3.0",
    "eslint-plugin-import": "2.20.2",
    "mocha": "7.1.1",
    "should": "13.2.3",
    "sinon": "9.0.2"
  },
  "dependencies": {
    "@tryghost/algolia-fragmenter": "0.0.1",
    "@tryghost/algolia-indexer": "0.0.1",
    "dotenv-webpack": "1.7.0",
    "netlify-lambda": "1.6.3"
  }
}
